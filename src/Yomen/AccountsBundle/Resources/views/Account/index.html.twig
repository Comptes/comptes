{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Account list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Createdon</th>
                <th>Modifiedon</th>
                <th>Iban</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('account_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdOn %}{{ entity.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.modifiedOn %}{{ entity.modifiedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.iban }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('account_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('account_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('account_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
